@page
@model AgapayAidSystem.Pages.EvacuationCenter.AddEvacuationCenterModel
@{
}

<style>


	.input-facility {
		width: 80px; /* Adjust the width as needed */
		margin-right: 10px;
	}

	.label-facility {
		padding-top: 10px;
	}

	.label-container {
		white-space: nowrap; /* Prevent label from wrapping to a new line */
	}

	.mx-auto {
		width: 120px;
	}
</style>

<div class="container p-2">

	<div class="container mt-4" id="disaster-form-container">

		<div class="row pt-3">
			<div class="input-group">
				<a class="btn btn-outline-primary" asp-area="" asp-page="/EvacuationCenter/Index"><i class="bi bi-arrow-left-circle" style="padding: 5px;"></i>List of Evacuation Center</a>
			</div>
		</div>

		<div class="row pt-4">
			<div class="col text-center">
				<h1>Add Evacuation Center</h1>
			</div>
		</div>

		<div class="row pt-4">

			<!-- Left column: Center Name, Street Address, and Mobile Number -->
			<div class="col-md-6">
				<!-- Evacution Center Name -->
				<div class="mb-3">
					<label class="form-label" for="InputEvacuationCenterName">Evacuation Center Name:</label>
					<input class="form-control" id="InputEvacuationCenterName" type="text">
				</div>

				<!-- Street Address -->
				<div class="mb-3">
					<label class="form-label" for="InputStreetAddress">Street Address:</label>
					<input class="form-control" id="InputStreetAddress" type="text">
				</div>

				<!-- Mobile Number -->
				<div class="mb-3">
					<label class="form-label" for="InputMobileNumber">Mobile Number:</label>
					<input class="form-control" id="InputMobileNumber" type="text" placeholder="e.g. 0987-654-3210">
				</div>
			</div>

			<!-- Right column: Evacuation Center Type, Barangay, and Telephone Number -->
			<div class="col-md-6">
				<!-- Evacuation Center Type -->
				<div class="mb-3">
					<label class="form-label" for="InputEvacuationType">Type of Evacuation Center:</label>
					<select class="form-select" id="InputEvacuationType">
						<option value="">Select Evacuation Center Type</option>
						<option value="School EC">School EC</option>
						<option value="Community-based EC">Community-based EC</option>
					</select>
				</div>

				<!-- Barangay -->
				<div class="mb-3">
					<label class="form-label" for="InputBarangay">Barangay:</label>
					<select class="form-select" id="InputBarangay">
						<option value="">Select Barangay</option>
						<option value="Assumption">Assumption</option>
						<option value="Bagong Buhay I">Bagong Buhay I</option>
						<option value="Bagong Buhay II">Bagong Buhay II</option>
						<option value="Bagong Buhay III">Bagong Buhay III</option>
					</select>
				</div>

				<!-- Telephone Number -->
				<div class="mb-3">
					<label class="form-label" for="InputTelephoneNumber">Telephone Number:</label>
					<input class="form-control" id="InputTelephoneNumber" type="text" placeholder="e.g. 01-2345-67890">
				</div>
			</div>

			<!-- Available Facilities -->
			<div class="mb-3 mt-4 text-center">
				<label class="form-label">Facility/s: Input available quantity, leave blank if none.</label>
				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Toilets -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputToilets" type="number" step="1">
								<label class="form-label label-facility" for="InputToilets">Toilets</label>
							</div>
						</div>
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Bathing Cubicle -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputBathingCubicle" type="number" step="1">
								<label class="form-label label-facility" for="InputBathingCubicle">Bathing Cubicle</label>
							</div>
						</div>
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Community Kitchen -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputCommunityKitchen" type="number" step="1">
								<label class="form-label label-facility" for="InputCommunityKitchen">Community Kitchen</label>
							</div>
						</div>
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Washing Area -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputWashingArea" type="number" step="1">
								<label class="form-label label-facility" for="InputWashingArea">Washing Area</label>
							</div>
						</div>
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Women-Friendly and Child-Friendly spaces -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputWFandCFSpaces" type="number" step="1">
								<label class="form-label label-facility label-container" for="InputWFandCFSpaces">Women-Friendly and Child-Friendly spaces</label>
							</div>
						</div>
					</div>
				</div>

				<div class="row justify-content-center">
					<div class="col-md-4">
						<!-- Multipurpose Areas -->
						<div class="mb-3">
							<div class="d-flex align-items-center">
								<input class="form-control input-facility" id="InputMultipurposeAreas" type="number" step="1">
								<label class="form-label label-facility" for="InputMultipurposeAreas">Multipurpose Areas</label>
							</div>
						</div>
					</div>
				</div>



				<div class="mb-3 mt-3 text-center">
					<label class="form-label">Maximum Capacity of Evacuation Center:</label>
					<input class="form-control mx-auto" id="InputMaxCapacity" type="number" placeholder="e.g. 1000">
				</div>
			</div>

		</div>

		<!-- Cancel and Save Button -->
		<div class="button-spacer">
			<button class="btn btn-outline-secondary mr-10">Cancel</button>
			<button type="submit" class="btn btn-primary">Save</button>
		</div>
	</div>
</div>