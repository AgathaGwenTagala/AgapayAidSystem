@page
@model AgapayAidSystem.Pages.ECStaffDatabase.IndexModel
@{
	ViewData["Title"] = "EC Staff Database";
}

<style>
	a {
		text-decoration: none;
		color: inherit;
	}

	.clickable-row:hover {
		cursor: pointer;
	}
</style>


<div class="container p-2">
	<div class="row pt-3">
		<div class="col">
			<div style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a class="nav-link text-muted" asp-area="" asp-page="/Index"><i class="bi bi-house-door-fill" style="padding: 5px;"></i>Home</a></li>
					<li class="breadcrumb-item active" aria-current="page" style="color: #3F8F8B;"><strong>EC Staff Database</strong></li>
				</ol>
			</div>
			
			<!-- Search Bar -->
			<form id="search-form">
				<div class="input-group">
					<input type="search" class="form-control ds-input" id="search-bar" placeholder="Search EC staff" aria-label="Search..." 
						autocomplete="off" role="combobox" aria-autocomplete="list" aria-expanded="false" aria-owns="algolia-autocomplete-listbox-0" 
						dir="auto" style="position: relative; vertical-align: top;">
					<button type="submit" class="btn btn-primary" id="search-button"><i class="bi bi-search"></i></button>
				</div>
			</form>
		</div>
	</div>


	<div class="row pt-4">
		<div class="col">
			<h1>EC Staff Database</h1>
		</div>
	</div>

	<div class="table-responsive">
		<table class="table align-middle table-hover" id="ecstaff-table" style="width:100%">
			<thead>
				<tr>
					<th>#</th>
					<th>
						<a asp-page="./Index" asp-route-sortBy="firstName" asp-route-sortOrder="@(Model.SortBy == "firstName" && Model.SortOrder == "asc" ? "desc" : "asc")" onclick="toggleArrowIcons('firstName')">
							Name
							<ion-icon id="firstNameArrow" name="@(Model.SortBy == "firstName" && Model.SortOrder == "asc" ? "arrow-up-outline" : "arrow-down-outline")"></ion-icon>
						</a>
					</th>
					<th>Sex</th>
					<th>
						<a asp-page="./Index" asp-route-sortBy="birthDate" asp-route-sortOrder="@(Model.SortBy == "birthDate" && Model.SortOrder == "asc" ? "desc" : "asc")" onclick="toggleArrowIcons('birthDate')">
							Birthdate
							<ion-icon id="birthDateArrow" name="@(Model.SortBy == "birthDate" && Model.SortOrder == "asc" ? "arrow-up-outline" : "arrow-down-outline")"></ion-icon>
						</a>
					</th>
					<th>Mobile Number</th>
					<th>Email Address</th>
					<th>
						<a asp-page="./Index" asp-route-sortBy="availabilityStatus" asp-route-sortOrder="@(Model.SortBy == "availabilityStatus" && Model.SortOrder == "asc" ? "desc" : "asc")" onclick="toggleArrowIcons('availabilityStatus')">
							Availability Status
							<ion-icon id="availabilityStatusArrow" name="@(Model.SortBy == "availabilityStatus" && Model.SortOrder == "asc" ? "arrow-up-outline" : "arrow-down-outline")"></ion-icon>
						</a>
					</th>
				</tr>
			</thead>
			<tbody>
				@{ var counter = 1; }
				@foreach (var item in Model.listECStaffDatabase) {
					<tr data-id="@item.ecStaffID" class="data-row clickable-row">
						<td width="5%">@counter</td>
						<td width="25%">@item.fullName</td>
						<td width="5%">@item.sex</td>
						<td width="12%">@item.birthdate</td>
						<td width="15%">@item.mobileNum</td>
						<td width="15%">@item.emailAddress</td>
						<td width="23%">@item.availabilityStatus</td>
					</tr>
					counter++;
				}
			</tbody>
		</table>
	</div>
</div>

<!-- Sorting -->
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script>
	let lastClickedHeader = null;

	function toggleArrowIcons(header) {
		// Get the arrow icons for all headers
		const ecStaffIDArrow = document.getElementById('ecStaffIDArrow');
		const fullNameArrow = document.getElementById('fullNameArrow');
		const birthdateArrow = document.getElementById('birthdateArrow');
		const availabilityStatusArrow = document.getElementById('availabilityStatusArrow');

		// Determine which header was clicked and toggle the arrow icons accordingly
		if (header === 'fullName') {
			ecStaffIDArrow.style.display = 'none';
			fullNameArrow.style.display = fullNameArrow.style.display === 'none' ? 'block' : 'none';
			birthdateArrow.style.display = 'none';
			availabilityStatusArrow.style.display = 'none';
		} else if (header === 'birthDate') {
			ecStaffIDArrow.style.display = 'none';
			fullNameArrow.style.display = 'none';
			birthdateArrow.style.display = birthdateArrow.style.display === 'none' ? 'block' : 'none';
			availabilityStatusArrow.style.display = 'none';
		} else if (header === 'availabilityStatus') {
			ecStaffIDArrow.style.display = 'none';
			fullNameArrow.style.display = 'none';
			birthDateArrow.style.display = 'none';
			availabilityStatusArrow.style.display = availabilityStatusArrow.style.display === 'none' ? 'block' : 'none';
		}

		lastClickedHeader = header;
	}
</script>

<!-- Search -->
<script>
	document.addEventListener("DOMContentLoaded", function () {
		document.getElementById("search-form").addEventListener("submit", function (e) {
			e.preventDefault();
			const query = document.getElementById("search-bar").value;
			fetch(`/ECStaffDatabase?handler=Search&query=${query}`)
				.then(response => response.json())
				.then(data => {
					const tableBody = document.querySelector("table tbody");
					tableBody.innerHTML = "";
					let counter = 1;
					data.forEach(result => {
						const newRow = `<tr data-id="${result.ecStaffID}" class="data-row clickable-row">
											<td width="5%">${counter}</td>
											<td width="25%">${result.fullName}</td>
											<td width="5%">${result.sex}</td>
											<td width="12%">${result.birthdate}</td>
											<td width="15%">${result.mobileNum}</td>
											<td width="15%">${result.emailAddress}</td>
											<td width="23%">${result.availabilityStatus}</td>
										</tr>`;
						tableBody.innerHTML += newRow;
						counter++;
					});
				})
				.catch(error => {
					console.error("Error:", error);
				});
		});
	});
</script>

<!-- Clickable Row for EC Staff Profile -->
<script>
	document.addEventListener("DOMContentLoaded", function () {
		const table = document.getElementById('ecstaff-table');

		table.addEventListener('click', function (event) {
			const clickedRow = event.target.closest('.data-row');

			if (clickedRow) {
				const ecStaffId = clickedRow.getAttribute("data-id");
				if (ecStaffId) {
					window.location.href = `/ECStaffDatabase/ECStaffProfile?ecStaffID=${ecStaffId}`;
				}
			}
		});
	});
</script>