@page
@model AgapayAidSystem.Pages.Disaster.AllocateECModel
@{
	ViewData["Title"] = "Allocate Evacuation Center";
}

@if (!string.IsNullOrEmpty(Model.errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    .search-container {
        margin-bottom: 20px;
    }
</style>

<div class="container p-2 form-container">

    <div class="container mt-4 form-container-content">

        <div class="row">
            <div class="col text-center">
                <h1>Allocate Evacuation Center</h1>
            </div>
        </div>
        <form method="POST" id="saveAllocateEC">
            <input type="hidden" name="disasterID" value="@Model.disasterInfo.disasterID" />
            <div class="row pt-4">
                <div class="col">
                    <div class="search-container">
                        <div class="input-group">
                            <input type="search" class="form-control ds-input" id="search-bar" name="search" placeholder="Search here..." aria-label="Search..." autocomplete="off" role="combobox" aria-autocomplete="list" aria-expanded="false" aria-owns="algolia-autocomplete-listbox-0" dir="auto" style="position: relative; vertical-align: top;">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row pt-4">
                <div class="table-responsive">
                    <table class="table align-middle table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Evacuation Center</th>
                                <th>Type</th>
                                <th>Barangay</th>
                                <th>Max Capacity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listEvacuation)
                            {
                                <tr>
                                    <td width="5%">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="@item.centerID" id="evacuationCenter" name="selectedEvacuationCenters[]">
                                            <label class="form-check-label"></label>
                                        </div>
                                    </td>
                                    <td width="30%">@item.centerName</td>
                                    <td width="20%">@item.centerType</td>
                                    <td width="30%">@item.barangayName</td>
                                    <td width="15%">@item.maxCapacity</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>@Model.successMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Cancel and Save Selection Button -->
                    <div class="button-spacer">
                        <a class="btn btn-outline-secondary mr-10" href="/Disaster/DisasterProfile?disasterID=@Model.disasterInfo.disasterID">Cancel</a>
                        <button type="button" class="btn btn-primary" name="saveSelection" data-bs-toggle="modal" data-bs-target="#confirmSaveModal" disabled>Save Selection</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal: Confirm Selection -->
<div class="modal" id="confirmSaveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Selection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to save the selection?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmSaveButton">Save Selection</button>
            </div>
        </div>
    </div>
</div>

<!-- Enable/disable "Save Selection" button -->
<script>
    const saveSelectionButton = document.querySelector('button[name="saveSelection"]');
    const checkboxes = document.querySelectorAll('input[name="selectedEvacuationCenters[]"]');

    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function () {
            const atLeastOneChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);
            saveSelectionButton.disabled = !atLeastOneChecked;
        });
    });
</script>

<!-- Save Changes button in Modal -->
<script>
    document.getElementById('confirmSaveButton').addEventListener('click', function () {
        document.getElementById('saveAllocateEC').submit();
    });
</script>
