<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agapay Aid</title>

    <!-- CSS Stylesheets -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootswatch_Zephyr.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.3.4/css/select.dataTables.min.css">

    <!-- JavaScript Libraries -->
    <script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script defer src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script defer src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script defer src="https://cdn.datatables.net/select/1.3.4/js/dataTables.select.min.js"></script>

    <!-- Your Local JavaScript Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <!-- Top Navigation Bar -->
    <div id="top-nav">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary shadow-lg mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/index">
                    <img src="/white-logo-horizontal.png" alt="" height="30" id="logo" style="margin-left: 15px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav" style="padding: 5px 10px 10px 0;">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/disaster/index">Disaster</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/evacuationcenter/index">Evacuation Center</a>
                        </li>
                        <!-- li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Database</a>
                            <ul class="dropdown-menu" data-bs-theme="light">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/family/index">Family</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/ecstaff/index">EC Staff</a></li>
                            </ul>
                        </li -->
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/family/index">Family</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/ecstaff/index">EC Staff</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/inventory/index">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/usermanagement/index">Users</a>
                        </li>
                        @*<li class="nav-item">
                            <a href="#" class="profile">
                                <img src="~/sample-pic.jpg" alt="User Profile">
                            </a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <main role="main" class="pb-3 pt-3 px-3 px-md-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AgapayAidSystem - <a asp-area="" asp-page="/about">About</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>