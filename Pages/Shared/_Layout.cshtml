                    </ul>
                </div> *@

                <div class="text-md-end ps-md-5 ps-3">
                    <a href="/login" type="button" class="btn btn-secondary text-primary me-2">Login</a>
                </div>
            </div>
        </div>
    </nav>

    <main role="main" class="container pt-5 pb-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AgapayAidSystem - <a asp-area="" asp-page="/about">About</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>