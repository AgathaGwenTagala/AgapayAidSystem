<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agapay Aid System</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootswatch_Zephyr.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <!-- Top Navigation Bar -->
    <div id="top-nav">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary shadow-lg mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/white-logo-horizontal.png" alt="" height="30" id="logo" style="margin-left: 15px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav" style="padding: 5px 10px 10px 0;">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Disaster/Index">Disaster</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/EvacuationCenter/Index">Evacuation Center</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Database</a>
                            <ul class="dropdown-menu" data-bs-theme="light">
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/Family/Index">Family Database</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-page="/ECStaffDatabase/Index">EC Staff Database</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Inventory/Index">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/UserManagement/Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Inventory/Index">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="profile">
                                <img src="~/sample-pic.jpg" alt="User Profile">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (desktop) -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block d-none sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Disaster/EntryLog">Entry Log</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Disaster/StaffAssignment">Staff Assignment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Disaster/ReliefGoodsPack">Relief Goods Pack</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Disaster/Distribution">Distribution</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Disaster/VulnerabilityAssessments">Vulnerability Assessments</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Sidebar (mobile) -->
            <div id="sidebarMobile" class="col-md-3 col-lg-2 d-md-none bg-light p-2">
                <select class="form-select">
                    <option value="/Disaster/EntryLog">Entry Log</option>
                    <option value="/Disaster/StaffAssignment">Staff Assignment</option>
                    <option value="/Disaster/ReliefGoodsPack">Relief Goods Pack</option>
                    <option value="/Disaster/Distribution">Distribution</option>
                    <option value="/Disaster/VulnerabilityAssessments">Vulnerability Assessments</option>
                </select>
            </div>

            <!-- Page Content -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pb-3 pt-3">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>

