    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- JS for Filter Button -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function markAllAsRead() {
            var checkboxes = document.querySelectorAll('.form-check-input');
            checkboxes.forEach(function (checkbox) {
                checkbox.checked = true;
            });
        }

        function toggleNotification() {
            var notification = document.getElementById("notification");
            notification.classList.toggle("show");
        }

        // Add event listener to close notification on document click
        document.addEventListener('click', function (event) {
            var notification = document.getElementById("notification");
            var bellIcon = document.querySelector('.notification-trigger');

            if (!notification.contains(event.target) && !bellIcon.contains(event.target)) {
                notification.classList.remove("show");
            }
        });


    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/index">
                <img src="/green-logo.svg" class="bi me-2 pb-2" width="60" height="50" alt="Green Logo">
                <span class="fs-4"><b>Agapay</b>Aid</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#top-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="top-navbar">
                <ul class="navbar-nav m-auto mb-2 mb-md-0">
                    <li><a href="/index" class="nav-link px-3 text-secondary">Home</a></li>
                    <li><a href="/disaster/index" class="nav-link px-3 text-white">Disaster</a></li>
                    <li><a href="/evacuationcenter/index" class="nav-link px-3 text-white">Centers</a></li>
                    <li><a href="/family/index" class="nav-link px-3 text-white">Family</a></li>
                    <!-- Notifications -->
                    <li class="nav-item">
                        <a href="javascript:void(0);" class="nav-link px-3 notification-trigger" onclick="toggleNotification()">
                            <i class="bi bi-bell-fill bell-icon text-white"></i> <!-- Bell icon -->
                        </a>
                        <div id="notification" class="notification position-absolute top-100 start-50 translate-middle-x">
                           <!-- Notifications will updated dynamically here-->
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link px-3 dropdown-toggle text-white" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle text-white"></i>
                        </a>
