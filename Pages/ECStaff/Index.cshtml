@page
@model AgapayAidSystem.Pages.ECStaff.IndexModel
@{
	ViewData["Title"] = "EC Staff";
}

<div class="content">
	<!-- Breadcrumb -->
	<div class="row pb-2" aria-label="breadcrumb">
		<nav style="--bs-breadcrumb-divider: '/';" aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="/index"><i class="bi bi-house-door-fill" style="padding: 5px;"></i>Home</a></li>
				<li class="breadcrumb-item active"><a><strong>Evacuation Center Staff</strong></a></li>
			</ol>
		</nav>
	</div>

	<!-- Title-->
	<div class="row p-2">
		<div class="col d-flex align-items-center">
			<h1><i class="bi bi-person-standing"></i>EC Staff</h1>
		</div>
	</div>

	<!-- Table -->
	<div class="row p-2">
		<div class="col-lg-12">
			<table id="staff-table" class="table display compact order-column table-hover" cellspacing="0" width="100%">
				<thead>
					<tr style="vertical-align: top;">
						<th>#</th>
						<th>Name</th>
						<th style="text-align: center;">Sex</th>
						<th style="text-align: center;">Age</th>
						<th>Birthdate</th>
						<th>Mobile Number</th>
						<th>Email Address</th>
						<th style="text-align: center;">Availability Status</th>
					</tr>
				</thead>
				<tbody>
					@{ var counter = 1; }
					@foreach (var item in Model.listECStaff)
					{
						<tr>
							<td width="5%">@counter</td>
							<td width="25%">@item.fullName</td>
							<td width="6%" style="text-align: center;">@item.sex</td>
							<td width="7%" style="text-align: center;">@item.age</td>
							<td width="10%">@item.birthdate</td>
							<td width="12%">@item.mobileNum</td>
							<td width="15%">@item.emailAddress</td>
							<td width="20%" style="text-align: center;">@item.availabilityStatus</td>
						</tr>
						counter++;
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<!-- Making the table responsive -->
<script>
	$(document).ready(function () {
		var table = $('#staff-table').DataTable({
			responsive: true,
			columnDefs: [
				{ "orderable": true, "targets": [0, 1, 3, 4] }, // Sortable columns
				{ "orderable": false, "targets": [2, 5, 6, 7] } // Non-sortable columns
			]
		});

		// Adding filters to specific columns
		table.columns([2, 7]).every(function () {
			var column = this;
			var select = $('<select><option value=""></option></select>')
				.appendTo($(column.header()))
				.on('change', function () {
					var val = $.fn.dataTable.util.escapeRegex(
						$(this).val()
					);

					column
						.search(val ? '^' + val + '$' : '', true, false)
						.draw();
				});

			column.data().unique().sort().each(function (d, j) {
				select.append('<option value="' + d + '">' + d + '</option>');
			});
		});
	});
</script>