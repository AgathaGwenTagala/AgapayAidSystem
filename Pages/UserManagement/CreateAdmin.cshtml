@page
@model AgapayAidSystem.Pages.UserManagement.CreateAdminModel
@{
    ViewData["Title"] = "New Admin";
}

<div class="container p-2">

	<div class="container mt-4 disaster-form-container">

		<div class="row pt-4">
			<div class="col text-center">
				<h1>Add New User</h1>
                <h6 class="text-dark">Admin</h6>
			</div>
		</div>


        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="POST">
            <input type="hidden" name="userID" value="@Model.userID" />

            <div class="row mb-3 user-container"> 
                <div class="row mb-3">
                    <p class="text-danger text-end">* Required field</p>
                </div>

                <div class="row mb-3 pb-1">
                    <label class="col-sm-2 col-form-label">User ID:</label>
                    <div class="col-sm-10">
                        <span class="form-control-plaintext form-readonly">@Model.userID</span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="InputAdminName">Admin Name:<span class="text-danger" style="padding:5px">*</span></label>
                    <input type="text" id="adminName" name="adminName" class="form-control" required maxlength="65" placeholder="adminJohn" />
                </div>

                <input type="hidden" name="userID" value="@Model.userID" />

                @if (!string.IsNullOrEmpty(Model.successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>@Model.successMessage</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Cancel and Save Button -->
                <div class="button-spacer">
                    <button class="btn btn-outline-secondary mr-10" href="#" role="button">
                        <i class="bi bi-arrow-left" style="padding:5px;"></i>
                        Previous</button>
                    <button class="btn btn-outline-secondary mr-10" href="/UserManagement/CreateAdmin?userID=@Model.userID&action=cancel&userIDToDelete=@Model.userID" role="button">
                        Cancel</button>
                    <button type="submit" class="btn btn-primary" id="submitBtn">Save</button>
                </div>
            </div>
        </form> 
    </div>
</div>

<script>
    const submitButton = document.getElementById('submitBtn');
    const form = document.querySelector('form');

    // Disable the submit button by default
    submitButton.disabled = true;

    // Function to check form validity and enable/disable the submit button
    function checkFormValidity() {
        if (form.checkValidity()) {
            submitButton.disabled = false;
        } else {
            submitButton.disabled = true;
        }
    }

    // Add an event listener for the input event on form elements
    form.addEventListener('input', checkFormValidity);
</script>