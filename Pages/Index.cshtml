@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<html>
    <head>
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
            <!--Boxicons-->
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

        <!--MAIN-->

            <div class="head-title">
                <div>
                    <h2>Home</h2>
                    <h3 class="sub-title">Hello, Welcome to Agapay Aid</h3>
                </div>
            </div>
        
            <div class="container form-container1">
	            <div class="container form-container-content1">
                    <h1>Gaya-gaya Fire</h1>
	            </div>

                <div class="dashcontent">
                    <div class="boxinfo">
                        <div class="infoitem">
                            <i class="bi bi-person"></i>
                            <div class="text">
                                <h3 class="dashtitle">1467</h3>
                                <p><b>Total Evacuees</b></p>
                                <div class="box-stat">
                                    <small>Male: <span>673</span></small>
                                    <small>Female: <span>794</span></small>
                                </div>
                            </div>
                        </div>

                        <div class="infoitem">
                            <i class="bi bi-people"></i>
                            <div class="text">
                                <h3 class="dashtitle">293</h3>
                                <p><b>Total Families</b></p>
                            </div>
                        </div>

                        <div class="infoitem">
                            <i class="bi bi-building-fill"></i>
                            <div class="text">
                                <h3 class="dashtitle">3</h3>
                                <p><b>Total Active</b></p>
                                <p><b>Evacuation Centers</b></p>
                            </div>
                        </div>

                         <div class="infoitem">
                            <i class="bi bi-person-check"></i>
                            <div class="text">
                                <h3 class="dashtitle">70</h3>
                                <p><b>Total Assigned</b></p>
                                <p><b>EC Staff Members</b></p>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
     
    </body>
</html>







